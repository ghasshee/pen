contract Counter(
    u256 _counter
    ){

    method () init() {
        u256 counter = 0;
        return then become Counter(counter); 

    }

    method () inc() {
        u256 counter = _counter + 1;
        return then become Counter(counter);
    }

    method () reset()  {
        u256 counter = 1; 
        return then become Counter(counter); 
    }
}

